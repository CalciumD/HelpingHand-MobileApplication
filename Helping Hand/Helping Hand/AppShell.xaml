<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Helping_Hand.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Helping_Hand"
    Shell.FlyoutBehavior="Disabled">

    

    <TabBar>
        <Tab Title="Gestures" Icon="select.svg">
            <ShellContent ContentTemplate="{DataTemplate local:GesturePage}" />
        </Tab>
        <Tab Title="Speech" Icon="speak.svg">
            <ShellContent ContentTemplate="{DataTemplate local:SpeakingPage}" />
        </Tab>
    </TabBar>

   
</Shell>
